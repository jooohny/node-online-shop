<%- include('../includes/header.ejs'); -%>
<%- include('../includes/navbar.ejs', { csrf }); -%>       
<main class="">
    <div class="row justify-content-center">
        <div class="col-3 pt-4">
            <hr>
            <% if (errors.length > 0) { %>

                <ul class="list-group mb-3">
                    <% for (const err of errors) {%>
                        <li class="list-group-item list-group-item-danger"><%= err.msg %></li>
                    <%} %>
                </ul>
        <% } %>
            <form action="/auth/reset" method="post" novalidate>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Enter your e-mail">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrf %>">
                <button type="submit" class="btn btn-dark">Reset password</button>
            </form>
        </div>
    </div>
</main>
<%- include('../includes/scripts.ejs'); -%>
