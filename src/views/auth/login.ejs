<%- include('../includes/header.ejs'); -%>
<%- include('../includes/navbar.ejs', { csrf }); -%>       
<main class="">
    <div class="row justify-content-center">
        <div class="col-3 pt-4">
            <% if (errors.length > 0) { %>

                    <ul class="list-group mb-3">
                        <% for (const err of errors) {%>
                            <li class="list-group-item list-group-item-<%= noteStyle %>"><%= err.msg %></li>
                        <%} %>
                    </ul>
            <% } %>
            <hr>
            <form action="/auth/login" method="post" novalidate>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Login">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrf %>">
                <button type="submit" class="btn btn-dark">Login</button>
                <a class="btn btn-link" href="/auth/reset" role="button">Reset password</a>
                <a href="/auth/signup" class="btn btn-outline-dark float-right" role="button" aria-pressed="true">Sign up</a>
            </form>
        </div>
    </div>
</main>
<%- include('../includes/scripts.ejs'); -%>
